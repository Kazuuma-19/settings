{
    "description": "Change ctrl + (right, left) to ctrl + (l, h)",
    "manipulators": [
        {
            "from": {
                "key_code": "l",
                "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                }
            },
            "to": [
                {
                    "key_code": "right_arrow",
                    "modifiers": ["control"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "h",
                "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                }
            },
            "to": [
                {
                    "key_code": "left_arrow",
                    "modifiers": ["control"]
                }
            ],
            "type": "basic"
        }
    ]
}